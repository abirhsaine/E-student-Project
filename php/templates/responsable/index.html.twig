{% extends 'base.html.twig' %}

{% block title %}Liste des responsables{% endblock %}

{% block body %}

<div class="container">

    <nav class="breadcrumb is-centered" aria-label="breadcrumbs">
        <ul>
            <li><a href="#">Administration</a></li>
            <li class="is-active"><a href="#" aria-current="page">Responsables</a></li>
        </ul>
    </nav>

    <div class="is-flex is-justify-content-space-between">
        <h1 class="title">
            Liste des responsables
        </h1> 
        <a class="button is-primary is-block is-light" href="{{ path('app_responsable_new') }}">Ajouter</a>
    </div>

    <div class="table-container">
        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for responsable in responsables %}
                <tr>
                    <td>{{ responsable.id }}</td>
                    <td>{{ responsable.nom }}</td>
                    <td>{{ responsable.prenom }}</td>
                    <td style="max-width: 100px;">
                        <a href="{{ path('app_responsable_show', {'id': responsable.id}) }}">
                            <span class="icon-text">
                                <span class="icon">
                                    <i class="fas fa-eye"></i>
                                </span>
                                <span>Afficher</span>
                            </span>
                        </a>
                        <a href="{{ path('app_responsable_edit', {'id': responsable.id}) }}">
                            <span class="icon-text">
                                <span class="icon">
                                    <i class="fas fa-pen"></i>
                                </span>
                                <span>Editer</span>
                            </span>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas de responsables</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
